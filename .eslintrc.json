{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-hooks"],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".json"]
      }
    }
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never"
      }
    ],
    "prefer-arrow-callback": "off",
    "linebreak-style": "off",
    "no-unused-vars": "off"
  },
  "overrides": [
    {
      "files": ["vite.config.js"],
      "rules": {
        "import/no-unresolved": "off",
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
